<?xml version="1.0" encoding="windows-1251"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <!--
      Получение локали по названию
      Опорный объект: ERIB_LOCALES
      Предикат доступа:  Фулскан
      Кардинальность: не более количества языков, используемых в системе
      -->
    <query name="com.rssl.phizic.operations.locale.ListLocaleOperation.getLocaleByName">
        select
            locale
        from
            com.rssl.phizic.locale.entities.ERIBLocale locale
        where
            (:extra_like_name is null or upper(locale.name) like upper(:extra_like_name))
    </query>
</hibernate-mapping>