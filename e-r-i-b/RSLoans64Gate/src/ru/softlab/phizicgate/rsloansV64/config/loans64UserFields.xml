<?xml version="1.0" encoding="windows-1251"?>
<requests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:noNamespaceSchemaLocation="loans64UserFieldsConfig.xsd">

	<request name="getLoanProduct" description="Получение информации по кредитному продукту">
			<field loansId="15135" tag="reducingPatronRate"             description="Понижающая ставка по КД."/>
			<field loansId="15019" tag="minAmount"                      description="Минимальная сумма кредита"/>
			<field loansId="15020" tag="maxAmount"                      description="Максимальная сумма кредита"/>
			<field loansId="15027" tag="isIssued"                       description="1 – могут быть выданы новые кредиты такого вида, 0 – для старых кредитов"/>
			<field loansId="15030" tag="allowedOffice"                  description="номера групп пользователей RS-Retail, в которых могут быть выданы кредиты такого вида">
				<parser>ru.softlab.phizicgate.rsloansV64.config.OfficesParser</parser>
			</field>
			<field loansId="15033" tag="duration"                       description="Срок кредитования вида кредита">
				<parser>ru.softlab.phizicgate.rsloansV64.config.DurationParser</parser>
			</field>
			<field loansId="15018" tag="minInitialInstalment"           description="Минимальный первоначальный взнос"/>
			<field loansId="15001" tag="commissionRate"                 description="Ставка Комиссии"/>
			<field loansId="15003" tag="commissionBase"                 description="База Комиссии"/>
			<field loansId="15131" tag="claimReviewCommission"          description="Комиссия за рассмотрение заявки"/>
			<field loansId="15132" tag="openAccountCommission"          description="Комиссия за открытие ссудного счета" />
			<field loansId="15014" tag="firstDelayPenalty"              description="Единовременная сумма штрафа за 1ю просрочку"/>
			<field loansId="15015" tag="secondDelayPenalty"             description="Единовременная сумма штрафа за 2ю просрочку"/>
			<field loansId="15016" tag="thirdDelayPenalty"              description="Единовременная сумма штрафа за 3ю просрочку"/>
			<field loansId="15022" tag="advancedRepaymentCommission"    description="Комиссия за досрочное погашение"/>
			<field loansId="15169" tag="serviceCommissionFirstYear"     description="Комиссия за обслуживание кредитного счета за 1 год"/>
			<field loansId="15170" tag="serviceCommissionSecondYear"    description="Комиссия за обслуживание кредитного счета со 2 года"/>
			<field loansId="15352" tag="guaranteeCount"                 description="Минимальное количество поручителей"/>
			<field loansId="15353" tag="ptsPenalty"                     description="Штраф за непредоставление ПТС (сумма в день)"/>
			<field loansId="15369" tag="expressMakingCardCommission"    description="Дополнительная комиссия за срочный выпуск карты"/>
	</request>

	<request name="getLoansInfo" description="Получение информации по видам кредита">
			<field loansId="15033" tag="duration"                       description="Срок кредитования вида кредита">
				<parser>ru.softlab.phizicgate.rsloansV64.config.DurationParser</parser>
			</field>
			<field loansId="15030" tag="allowedOffice"                  description="номера групп пользователей RS-Retail, в которых могут быть выданы кредиты такого вида">
				<parser>ru.softlab.phizicgate.rsloansV64.config.OfficesParser</parser>
			</field>		
			<field loansId="15352" tag="guaranteeCount"                 description="Минимальное количество поручителей"/>
	</request>

	<request name="getLoansSystemInfo" description="Обязательные поля кредита">
			<field loansId="LCREDITSUM" tag="getLoanAmount"             description="Запрашиваемая сумма кредита">
				<parser>ru.softlab.phizicgate.rsloansV64.config.LoansSumParser</parser>
			</field>
			<field loansId="LCREDITCURCODE" tag="getLoanAmount"         description="ID валюты кредита">
				<parser>ru.softlab.phizicgate.rsloansV64.config.LoansSumCodeParser</parser>
			</field>
			<field loansId="LCREDITDURATION" tag="getDuration"          description="Запрашиваемый срок кредитования">
				<parser>ru.softlab.phizicgate.rsloansV64.config.LoansMonthParser</parser>
			</field>
			<field loansId="LSELFSUM" tag="getSelfAmount"               description="">
				<parser>ru.softlab.phizicgate.rsloansV64.config.LoansSumParser</parser>
			</field>
			<field loansId="LSELFCURCODE" tag="getSelfAmount"           description="ID валюты собственных средств">
				<parser>ru.softlab.phizicgate.rsloansV64.config.LoansSumCodeParser</parser>
			</field>
			<field loansId="SUMOBJECT" tag="getObjectAmount"            description="Стоимость приобретаемого товара">
				<parser>ru.softlab.phizicgate.rsloansV64.config.LoansSumParser</parser>
			</field>
			<field loansId="SUMOBJECTCURCODE" tag="getObjectAmount"     description="ID валюты приобретаемого товара">
				<parser>ru.softlab.phizicgate.rsloansV64.config.LoansSumCodeParser</parser>
			</field>
			<field loansId="CREDITTYPEID_REF" tag="getConditionsId"     description="ID вида кредита"/>
			<field loansId="LCTYPEDURATION" tag="" value="0"            description="Тип периода погашения 0-месяцы"/>
			<field loansId="GIVINGDATE" tag="getDateCreated"            description="Дата подачи заявки">
				<parser>ru.softlab.phizicgate.rsloansV64.config.LoansDateParser</parser>
			</field>

	</request>


</requests>
