macro formatDateToText( d, m, y )
  var str = "";
  var temp;

  temp = string(d);
  if (strlen(temp) == 1)
    str = str + "0";
  end;
  str = str + temp;  
  
  temp = string(m);
  if (strlen(temp) == 1)
    str = str + "0";
  end;
  str = str + temp;  

  str = str + y;  

  return str;
end;

macro formatDateToDate( str )
  var d, m, y;         
  if ( strlen( str ) != 10 )
    return null;
  end; 

  d = int(substr( str, 1, 2 ));
  m = int(substr( str, 4, 2 ));
  y = int(substr( str, 7, 4 ));

  return date( d, m, y );

  
//  return date( str );  
end;//formatDateToDate( str )

macro period_rt2ib( KindTerm, term, outXml, Node )

