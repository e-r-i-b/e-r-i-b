macro dateStamp2Date( stamp )
  var d;
  var day, month, year;

  DtTmSplit( stamp, d );
  DateSplit( d, day, month, year );

  if (( day   == 1 ) and 
      ( month == 1 ) and 
      ( year  == 1 ))
    day   = 0;
    month = 0;
    year  = 0;
  end;

  return date( day, month, year );
end;


