  elif ( KindTerm == ADSP_MON    )   // ¬¥áïæë              
    m = term;    
  elif ( KindTerm == ADSP_QWART  )   // ª¢ àâ «ë            
    m = 3 * term;
  elif ( KindTerm == ADSP_YEAR   )   // £®¤ë                
    y = term;
