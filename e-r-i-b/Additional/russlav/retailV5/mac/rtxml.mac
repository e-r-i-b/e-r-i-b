  private macro findOperByTranByDate(accRef, fromDate, toDate)
    opers.rewind();
    opers.rec.referenc = accRef;
    opers.rec.Date_Document = fromDate;
    var stat = opers.getGe();
    while(stat and (opers.rec.referenc == accRef) and (opers.rec.Date_Document <= toDate))
      if(opers.rec.ListTransfer == tran.rec.authRef)
       return true;
      end;
      stat = opers.next();
    end;
    return false;
  end;

  private macro findOperByTranByNumber(accRef)
    opers.rewind();
    opers.rec.referenc = accRef;
    
    var stat = opers.getGe();
    while(stat and (opers.rec.referenc == accRef) )
      if(opers.rec.ListTransfer == tran.rec.authRef)
       return true;
      end;
      stat = opers.next();
    end;
    return false;
  end;


