  record or_sbdepdoc1 ( "sbdepdoc.1"  , "sbbank.def" );
  record or_sbdepdoc11( "sbdepdoc.11" , "sbbank.def" );

  var cont;
  var hdr, rep, val, lastDate;
  var emptyRep = true;
  var outRest = $0, debetTurns = $0, creditTurns = $0;
  var typeOper;
  var cll = TClientList;
