<?xml version="1.0" encoding="windows-1251"?>
<security-validation-config
		xmlns:jxb="http://java.sun.com/xml/ns/jaxb/bindingschema_2_0.xsd"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:noNamespaceSchemaLocation="../../schemas/security-config.xsd">
<security-settings key="employee">
	<parameters>
		<parameter name="com.rssl.iccs.login.attempts" value="3"/>
		<parameter name="com.rssl.iccs.login.blockedTimeout" value="60"/>
	</parameters>

	<password-settings>
		<minimal-length>8</minimal-length>
		<allowed-charsets default="Цифры и заглавные буквы">
			<allowed-charset name="Цифры и заглавные буквы">
				<charset>0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ</charset>
				<validation-message>Пароль должен содержать заглавные буквы и цифры</validation-message>
			</allowed-charset>
			<allowed-charset name="Цифры и буквы">
				<charset>0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz</charset>
				<validation-message>Пароль должен содержать буквы и цифры</validation-message>
			</allowed-charset>
			<allowed-charset name="Только цифры">
				<charset>0123456789</charset>
				<validation-message>Пароль должен содержать только цифры</validation-message>
			</allowed-charset>
		</allowed-charsets>
	</password-settings>

	<validation-strategy>
		<key>EmployeePasswordValidatation</key>
		<name>Проверка пользовательских паролей</name>
		<validator className="com.rssl.common.forms.validators.RegexpFieldValidator">
			<parameter name="regexp" value="\w*\d*"/>
			<parameter name="message" value="Пароль содержит недопустимые символы."/>
		</validator>
		<validator className="com.rssl.common.forms.validators.RegexpFieldValidator">
			<parameter name="regexp" value="\w*"/>
		</validator>
	</validation-strategy>
</security-settings>
<security-settings key="client">
	<parameters>
		<parameter name="com.rssl.iccs.login.attempts" value="3"/>
	</parameters>

	<password-settings>
		<minimal-length>8</minimal-length>
		<allowed-charsets default="Цифры и заглавные буквы">
			<allowed-charset name="Цифры и заглавные буквы">
				<charset>0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ</charset>
				<validation-message>Пароль должен содержать заглавные буквы и цифры</validation-message>
			</allowed-charset>
			<allowed-charset name="Цифры и буквы">
				<charset>0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz</charset>
				<validation-message>Пароль должен содержать буквы и цифры</validation-message>
			</allowed-charset>
			<allowed-charset name="Только цифры">
				<charset>0123456789</charset>
				<validation-message>Пароль должен содержать только цифры</validation-message>
			</allowed-charset>
		</allowed-charsets>
	</password-settings>

	<validation-strategy>
		<key>ClientPasswordValidatation</key>
		<name>Проверка пользовательских паролей</name>
		<validator className="com.rssl.common.forms.validators.RegexpFieldValidator">
			<parameter name="regexp" value="\w*\d*"/>
			<parameter name="message" value="Пароль содержит недопустимые символы."/>
		</validator>
	</validation-strategy>
</security-settings>
</security-validation-config>