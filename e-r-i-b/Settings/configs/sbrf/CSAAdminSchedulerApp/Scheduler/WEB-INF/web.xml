<?xml version="1.0" encoding="UTF-8"?>

<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

    <listener>
        <listener-class>com.rssl.phizic.service.StartupServiceDictionaryStarter</listener-class>
    </listener>

	<servlet>
		<servlet-name>QuartzInitializerServletMessaging</servlet-name>
		<servlet-class>com.rssl.phizic.scheduler.QuartzInitializerServletExt</servlet-class>
		<init-param>
			<param-name>config-file</param-name>
			<param-value>quartz.properties</param-value>
		</init-param>
		<init-param>
			<param-name>start-scheduler-on-load</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>shutdown-on-unload</param-name>
			<param-value>true</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

    <resource-ref id="CSAAdminScheduler_ResourceRef_JDBC_PhizIC">
        <res-ref-name>jdbc/PhizIC</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <resource-ref id="CSAAdminScheduler_ResourceRef_JDBC_CSAAdmin">
        <res-ref-name>jdbc/CSAAdmin</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <resource-ref  id="CSAAdminScheduler_ResourceRef_JDBC_PhizICLog">
        <res-ref-name>jdbc/PhizICLog</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

</web-app>
