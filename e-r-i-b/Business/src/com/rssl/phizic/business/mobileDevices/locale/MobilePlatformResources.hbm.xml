<?xml version="1.0"?><!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.rssl.phizic.business.mobileDevices.locale.MobilePlatformResources" table="MOBILE_PLATFORM_RES">

        <composite-id>
            <key-property name="id"       column="ID"        type="long"/>
            <key-property name="localeId" column="LOCALE_ID" type="string"/>
        </composite-id>

        <property name="platformName"           type="string"       column="PLATFORM_NAME"       not-null="true"/>
        <property name="errorText"              type="string"       column="ERROR_TEXT"          not-null="false"/>
    </class>


</hibernate-mapping>