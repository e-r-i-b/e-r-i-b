<?xml version="1.0" encoding="windows-1251"?>
<payment-form name="RefundGoodsClaim" description="Возврат товара из интернет-магазина"
              detailedDescription="Форма возврата товара"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="../../PaymentForm.xsd">
    <implementation class="com.rssl.phizic.business.documents.RefundGoodsClaim"/>
	<extended-metadata-loader class="com.rssl.phizic.business.forms.RefundGoodsMetadataLoader"/>

    <fields>
        <field
		        name="documentNumber"
		        description="Номер отзыва"
		        type="string"
		        source="document-number">
        </field>

		<field name="state"
		       source="state"
		       description="Статус платежа"
		       type="string"/>

		<field
				name="documentDate"
				description="Дата отзыва"
				type="date"
				source="document-date">
        </field>

	    <field
			    name="recalledDocumentNumber"
			    description="Номер отзываемого перевода"
			    type="string"
			    source="extra-parameters/parameter[@name='recalled-document-number']/@value">
        </field>

         <field
			    name="recalledDocumentFormName"
			    description="Форма отзываемого документа"
			    source="extra-parameters/parameter[@name='recalled-document-form-name']/@value"
			    type="string">
        </field>

	    <field
			    name="amountCurrency"
			    description="Валюта"
			    source="amount-currency"
			    type="string"/>

		<field
				name="amount"
				description="Сумма возврата"
				source="amount"
				type="money">
		</field>

	    <field
			    name="parentId"
			    description="Ссылка на отзываемый платеж"
			    source="extra-parameters/parameter[@name='parent-id']/@value"
			    type="string">
        </field>

        <field
			    name="externalDocumentId"
			    description="Идентификатор документа возврата в интернет-магазине"
			    source="extra-parameters/parameter[@name='external-document-id']/@value"
			    type="string">
        </field>

        <field
			    name="returnedGoods"
			    description="Список возвращенных товаров/билетов"
			    source="extra-parameters/parameter[@name='returned-goods']/@value"
			    type="string">
        </field>

        <field
                name="refundUuid"
                description="Идентификатор возврата"
                source="extra-parameters/parameter[@name='refund-uuid']/@value"
                type="string">
        </field>
    </fields>
</payment-form>
