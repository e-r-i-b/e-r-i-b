<?xml version="1.0" encoding="windows-1251"?>
<payment-form name="DepositorFormClaim"
              description="Поручение на получение анкетных данных"
              detailedDescription=" На этой странице Вы можете создать поручение на получение анкеты депонента.
              Для совершения операции заполните поля формы и нажмите на кнопку «Сохранить».
              &lt;span class='text-red'&gt;Обратите внимание, что данная операция является платной&lt;/span&gt;. С тарифами Вы можете ознакомиться на сайте Банка."
              confirmDescription="Анкета депонента получена успешно. Для просмотра анкетных данных в списке счетов депо рядом с интересующим Вас счетом щелкните по ссылке «Анкета депонента»."
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="../../PaymentForm.xsd">
    <implementation class="com.rssl.phizic.business.documents.DepositorFormClaim"/>

    <fields>
        <field  name="state"
                description="Статус заявки"
                type="string"
                source="state"/>

        <field  name="documentNumber"
                description="Номер заявки"
				type="string"
				source="document-number"/>

        <field  name="documentDate"
				description="Дата заявки"
				type="date"
				source="document-date"/>


        <field  name="depositor"
                description="Депонент"
                type="string"
                source="extra-parameters/parameter[@name='depositor']/@value"/>

         <field  name="depoAccount"
                description="Счет депо"
                type="string"
                source="extra-parameters/parameter[@name='depo-account']/@value">
            <validators>
				<validator class="com.rssl.common.forms.validators.RequiredFieldValidator"/>
			</validators>
        </field>
         <!--Внешний идентификатор счета Депо-->
        <field  name="depoExternalId"
                description="внешний id счета депо"
                type="string"
                source="extra-parameters/parameter[@name='depo-external-id']/@value" />

        <field  name="depoId"
                description="id счета депо"
                type="string"
                source="extra-parameters/parameter[@name='depo-id']/@value" />

   </fields>

</payment-form>