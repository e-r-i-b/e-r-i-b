<?xml version="1.0" encoding="windows-1251"?>
<payment-form name="GetPrivateOperationScanClaim"
              description="Заявка на получение копии  документа на  электронную почту"
              detailedDescription="Документ подтверждённый электронной подписью будет отправлен на указанный e-mail."
              confirmDescription="Заявка успешно отправлена в банк. После ее обработки Вы сможете принять на счет депо ценные бумаги данного вида. Спасибо, что Вы воспользовались «Сбербанк Онлайн»!"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="../../PaymentForm.xsd">
    <implementation class="com.rssl.phizic.business.documents.GetPrivateOperationScanClaim"/>

    <fields>
        <field  name="state"
                description="Статус заявки"
                type="string"
                source="state"/>

        <field  name="documentNumber"
                description="Номер заявки"
                type="string"
                source="document-number"/>

        <field  name="documentDate"
                description="Дата заявки"
                type="date"
                source="document-date"/>

        <field  name="client-fio"
                description="ФИО клиента"
                type="string"
                subType="static"
                source="extra-parameters/parameter[@name='client-fio']/@value">
        </field>

        <field  name="account-number"
                description="Номер счёта"
                type="string"
                subType="static"
                source="extra-parameters/parameter[@name='account-number']/@value">
        </field>

        <field  name="amount"
                description="Сумма"
                type="string"
                subType="static"
                source="extra-parameters/parameter[@name='amount']/@value">
        </field>

        <field  name="debit"
                description="расходная операция"
                type="string"
                subType="static"
                source="extra-parameters/parameter[@name='debit']/@value">
        </field>

        <field  name="authorisation-code"
                description="Код авторизации"
                type="string"
                subType="static"
                source="extra-parameters/parameter[@name='authorisation-code']/@value">
        </field>

        <field  name="e-mail"
                description="Электронный адрес"
                type="string"
                subType="static"
                source="extra-parameters/parameter[@name='e-mail']/@value">
        </field>

        <field  name="send-operation-date"
                description="Дата операции"
                type="date"
                subType="static"
                source="extra-parameters/parameter[@name='send-operation-date']/@value">
        </field>

    </fields>
</payment-form>